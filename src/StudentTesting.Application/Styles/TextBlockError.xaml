<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="ErrorTextBlock"
        TargetType="{x:Type TextBlock}">
        <Setter
            Property="Foreground"
            Value="#ff0000" />

        <Style.Triggers>
            <Trigger
                Property="Text"
                Value="">
                <Setter
                    Property="Visibility"
                    Value="Collapsed" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>