<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ap="clr-namespace:StudentTesting.MaterialDesign.AttachedProperty;assembly=StudentTesting.MaterialDesign">
    <Style x:Key="MenuListBox_Item" TargetType="ListBoxItem" BasedOn="{StaticResource MaterialListBox_Item}">
        <Setter Property="Padding" Value="10 5" />
        <Setter Property="Margin" Value="0 2" />
        <Setter Property="ap:ListBoxItem.CornerRadius" Value="3" />

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="LightGray" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#bbdefb" />
                <Setter Property="Foreground" Value="#1a237e" />
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MenuListBox" TargetType="ListBox" BasedOn="{StaticResource MaterialListBox}">
        <Setter Property="ItemContainerStyle" Value="{StaticResource MenuListBox_Item}" />

        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden" />
    </Style>
</ResourceDictionary>