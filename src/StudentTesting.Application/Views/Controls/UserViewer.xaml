<UserControl x:Class="StudentTesting.Application.Views.Controls.UserViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:StudentTesting.Application.Views.Controls"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="30" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ElementName=Root, Path=ActualHeight}" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <uc:CircleImage d:Source="/Resources/Images/DefaultUserPic.png"
                        Source="{Binding ElementName=Root, Path=User.UserPic}" />

        <StackPanel Grid.Column="1" Margin="5 0">
            <TextBlock Text="{Binding ElementName=Root, Path=User.FullName}"
                       d:Text="Фамилия Имя" />
            <TextBlock Foreground="Gray" Text="{Binding ElementName=Root, Path=User.Role, Converter={StaticResource UserRoleConvertor}}"
                       d:Text="Студент" />
        </StackPanel>
    </Grid>
</UserControl>
