<UserControl
    x:Class="StudentTesting.Application.Views.Icons.AddIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StudentTesting.Application.Views.Icons"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="100"
    x:Name="Root">
    <Viewbox>
        <Path
            Stroke="{Binding ElementName=Root, Path=Color}"
            StrokeThickness="5"
            Width="100"
            Height="100">
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry
                        Center="50,50"
                        RadiusX="47.5"
                        RadiusY="47.5" />

                    <LineGeometry
                        StartPoint="50,20"
                        EndPoint="50,80" />

                    <LineGeometry
                        StartPoint="20,50"
                        EndPoint="80,50"/>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Viewbox>
</UserControl>
